#!/usr/bin/env python3

from src.clone import clone
from src.grade import grade
from src.assemble import assemble
from src.mail import mail
from src.parser import Parser


# Nice hack btw!
choices = [
    clone.__name__,
    grade.__name__,
    assemble.__name__,
    mail.__name__
]

if __name__ == "__main__":

    parser = Parser()

    print("Welcome to INF1900 interactive grading tool")

    while True:

        choice = input(f"What do you want to do? Please choose one of the following: {choices} ").strip()

        if choice in choices:
            globals()[choice](*parser.vargs)
        else:
            print("Incorrect parameter, please try again.")
