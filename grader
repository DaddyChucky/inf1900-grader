#!/usr/bin/env python3

from src.views.mail    import MailView
from src.views.main    import MainView
from src.views.tui     import TUI
from src.views.widgets import MiniBuff

from urwid import WidgetDisable

if __name__ == "__main__":

    mini_buff = MiniBuff()

    main_view = MainView()

    tui = TUI(main_view.root, footer=WidgetDisable(mini_buff))

    main_view.swap_view = tui.body

    # add your view with binding
    main_view.add_view("m", MailView())

    # end of time
    tui()
